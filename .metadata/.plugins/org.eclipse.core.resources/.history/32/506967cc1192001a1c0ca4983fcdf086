<script>
$ (document).ready(function(){
	$("#takaisin").click(function(){
		document.location="listaaasiakkaat.jsp";
	});
	// haetaan muutettavan asiakkaan tiedot. Kutsutaan backin "GET" metodia.
	//GET /asiakkaat/haeyksi/asiakas_id
	var asiakas_id=requestURLParam("asiakas_id");
	$.getJSON({url:"asiakkaat/haeyksi/"+asiakas_id, type:"GET", dataType:"json", success: function(result){ // eli haetaan GET:llä ja se mitä GET-metodi palauttaa asettuu result:iin
		
		$("#etunimi").val(result.etunimi);
		$("#sukunimi").val(result.sukunimi);
		$("#puhelin").val(result.puhelin);
		$("#sposti").val(result.sposti);
	}});
	
});

</script>
